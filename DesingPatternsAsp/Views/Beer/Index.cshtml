@using DesingPatternsAsp.Models.ViewModels
@model IEnumerable<BeerViewModel>

<div class="row">
    <div class="col-md-12">
        <a class="btn btn-primary" href="@Url.Action("Add", "Beer")">Nueva cerveza</a>
    </div>
</div>

<br />

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Estilo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (BeerViewModel beer in Model)
                {
                    <tr>
                        <td>@beer.Id</td>
                        <td>@beer.Name</td>
                        <td>@beer.Style</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

