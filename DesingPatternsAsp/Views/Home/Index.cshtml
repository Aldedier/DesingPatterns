@using DesingPatterns.Models.Data
@model IEnumerable<Beer>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.NOMBRE</h1>
    
    <div class="row">
        <div class="col-md-12">
            @foreach(Beer beer in Model)
            {
                <p>@beer.Name</p>
            }
        </div>
    </div>


</div>
